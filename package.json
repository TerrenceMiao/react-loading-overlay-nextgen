{
  "name": "react-loading-overlay-nextgen",
  "version": "1.2.2",
  "description": "Loading overlays with fade, spinner, message support. Updated for compatibility with React 17. Forked from https://github.com/derrickpelletier/react-loading-overlay - which does not appear to be maintained at this point.",
  "licence": "MIT",
  "keywords": [
    "react",
    "loading",
    "loader",
    "fade",
    "transition",
    "spinner"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build-cjs && npm run build-es6 && rimraf umd && npm run build-umd && npm run build-min",
    "build-cjs": "tsc && rimraf lib && cpx 'src/**/*.{js,js.map,d.ts}' lib",
    "build-es6": "tsc && rimraf es6 && cpx 'src/**/*.{js,js.map,d.ts}' es6",
    "build-umd": "tsc && cpx 'src/**/*.{js,js.map,d.ts}' umd && webpack --mode=development src/index.js -o umd/index.js",
    "build-min": "tsc && cpx 'src/**/*.{js,js.map,d.ts}' umd && webpack --mode=production src/index.js -o umd/index.min.js",
    "watch": "tsc -w",
    "storybook": "start-storybook -p 9001",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "test": "jest",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TerrenceMiao/react-loading-overlay-nextgen"
  },
  "author": {
    "name": "Derrick Pelletier",
    "email": "derrick@dpelletier.com",
    "url": "http://dpelletier.com"
  },
  "contributors": [
    {
      "name": "Terrence Miao",
      "email": "terrence.miao@gmail.com",
      "url": "https://github.com/TerrenceMiao"
    }
  ],
  "bugs": {
    "url": "https://github.com/rTerrenceMiao/react-loading-overlay-nextgen/issues"
  },
  "homepage": "https://github.com/TerrenceMiao/react-loading-overlay-nextgen#readme",
  "dependencies": {
    "emotion": "^10.0.1",
    "prop-types": "^15.6.2",
    "react-transition-group": "^4.4.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^4.0.10",
    "@storybook/react": "^4.0.10",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@types/react-transition-group": "^4.4.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^29.6.3",
    "babel-loader": "^8.0.4",
    "cpx": "^1.5.0",
    "jest": "^29.6.3",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-testing-library": "^5.3.1",
    "regenerator-runtime": "^0.13.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.21",
    "standard": "^12.0.1",
    "styled-components": "^4.1.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "peerDependencies": {
    "react": "^0.14 || ^15.0.0-rc || ^15.0 || ^16.0.0 || ^16.0 || ^17.0.0 || ^17.0",
    "react-dom": "^0.14 || ^15.0.0-rc || ^15.0 || ^16.0.0 || ^16.0 || ^17.0.0 || ^17.0"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
